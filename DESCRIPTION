        yardstick, workflows (>= 0.1.3), hardhat, rlang (>= 0.1.2),
        glue, plotly, reactable, gt, ggplot2, tibble, tidyr, dplyr,
        purrr, stringr, forcats, scales, janitor, progressr, magrittr,
        forecast, xgboost (>= 1.2.0.1), prophet, methods, cli
